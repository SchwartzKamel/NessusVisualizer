{% extends 'layout.jinja2' %}

{% block title %}
  Scan Results
{% endblock %}

{% block styles %}
<link rel="stylesheet" href="{{ url_for('static', filename='css/style.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block content %}
<div class="container-flex">
  <h1>Scan Results</h1>
  <div id="accordion">
  {% for n in scan_data %}}
  <div class="card">
    <div class="card-header" id="pluginSeverity">
      <h5 class="mb-0">
        <button class="btn btn-link" data-toggle="collapse" data-target="#pluginID" aria-expanded="true" aria-controls="pluginID">
          CARD TITLE INFORMATION GOES HERE
        </button>
      </h5>
    </div>
    <div id="pluginID" class="collapse show" aria-labelledby="pluginSeverity" data-parent="#accordion">
      <div class="card-body">
        CARD BODY INFORMATION GOES HERE
      </div>
    </div>
  </div>
  {% endfor %}
</div>
</div>
{% endblock %}